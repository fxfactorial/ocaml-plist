Library plist
  Path: lib
  Modules: Plist
  install: true
  if system(macosx)
    CCOpt:
      -g -ObjC -fno-objc-arc
    CClib: -framework Foundation
  else
    CCOpt:
      -x objective-c $(OBJC_FLAGS)
      -fconstant-string-class=NSConstantString
    CClib:
      -lgnustep-base -lobjc
  NativeOpt:
    -g -w +a-4-40..42-44-45-48
  ByteOpt: -g -w +a-4-40..42-44-45-48
  CSources: plist_ml_stubs.c
  BuildDepends: yojson

